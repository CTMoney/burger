<h1 class="display-3 mx-auto text-center">'Burgs</h1>
<p class="lead mx-auto text-center">Eat Some Burgs, Make Some Burgs</p>

<div class="container">

    <div class="list-group">

        {{#each this.data}}
       {{#if this.devoured "is" "false"}}
        <button id="devour-btn" data-id="{{this.id}}"
            class="list-group-item border-primary list-group-item-action">{{this.burger_name}}</button>
        {{/if}} 
        {{/each}}

    </div>

    <form class="mt-3">
        <div class="form-group">
            <label for="burgerName">New Burg Submission</label>
            <textarea class="form-control" id="burgerName" rows="3"></textarea>
        </div>
        <button type="submit" id="submit-btn" class="btn btn-primary btn-lg btn-block">Submit</button>
    </form>

</div>